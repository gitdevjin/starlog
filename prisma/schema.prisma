generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String    @id @default(uuid())
  password     String?
  email        String?   @unique
  githubId     String?   @unique
  refreshToken String?
  createdAt    DateTime  @default(now())
  stargate     Stargate?
  planets      Planet[]
  gravities    Gravity[]
  moons        Moon[]
  orbitings    Orbit[]   @relation("Orbiting") // users I follow (I am orbiter)
  orbiters     Orbit[]   @relation("Orbited") // users who follow me (I am orbited)
}

model Stargate {
  id        Int       @id @default(autoincrement())
  starname  String?
  firstName String?
  lastName  String?
  bio       String?
  dob       DateTime?
  avatarUrl String?
  coverUrl  String?
  userId    String    @unique
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Planet {
  id           Int       @id @default(autoincrement())
  content      String
  imageUrls    String[]
  moonCount    Int       @default(0)
  viewCount    Int       @default(0)
  gravityCount Int       @default(0)
  createdAt    DateTime  @default(now())
  creatorId    String
  creator      User      @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  gravities    Gravity[]
  moons        Moon[]
}

model Gravity {
  id        Int      @id @default(autoincrement())
  planetId  Int
  planet    Planet   @relation(fields: [planetId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  creatorId String
  creator   User     @relation(fields: [creatorId], references: [id], onDelete: Cascade)

  @@unique([creatorId, planetId])
}

model Moon {
  id        Int      @id @default(autoincrement())
  content   String
  planetId  Int
  planet    Planet   @relation(fields: [planetId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  creatorId String
  creator   User     @relation(fields: [creatorId], references: [id], onDelete: Cascade)

  parentMoonId Int?
  parentMoon   Moon?  @relation("MoonToParent", fields: [parentMoonId], references: [id])
  childMoons   Moon[] @relation("MoonToParent")

  rootMoonId   Int?
  rootMoon     Moon?  @relation("MoonToRoot", fields: [rootMoonId], references: [id])
  rootChildren Moon[] @relation("MoonToRoot")
}

model Orbit {
  id         Int      @id @default(autoincrement())
  orbiterId  String //actor
  orbitingId String //target
  createdAt  DateTime @default(now())
  orbiter    User     @relation("Orbiting", fields: [orbiterId], references: [id], onDelete: Cascade)
  orbiting   User     @relation("Orbited", fields: [orbitingId], references: [id], onDelete: Cascade)

  @@unique([orbiterId, orbitingId])
}
